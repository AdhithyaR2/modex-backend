# ===== App runtime =====
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# ===== Postgres (set to your connection string) =====
# Example (local docker): postgresql://postgres:postgres@localhost:5432/modexdb
# Example (managed): postgresql://username:password@host:port/dbname
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/modexdb
DB_SSL=false

# ===== Worker / booking expiry =====
# How often the expiry worker scans for old PENDING bookings (in seconds)
WORKER_INTERVAL_SECONDS=30

# How many minutes before a PENDING booking is considered expired
EXPIRE_MINUTES=2

# ===== Optional: security / feature flags =====
# If you use Redis for distributed locking / caching, provide URL here (optional)
REDIS_URL=redis://localhost:6379

# Optional: a simple secret (not required for this assessment unless adding auth)
JWT_SECRET=replace_with_a_strong_secret

# ===== Notes =====
# 1) For production managed Postgres, set DB_SSL=true if required by provider.
# 2) If your Postgres does not support gen_random_uuid(), enable pgcrypto:
#    CREATE EXTENSION IF NOT EXISTS pgcrypto;
